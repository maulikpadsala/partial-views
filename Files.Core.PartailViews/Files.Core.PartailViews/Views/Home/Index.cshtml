@using Files.Core.PartailViews.Repository
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IFilms Films
<h1>List of Films</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            @*<th>Discritption</th>
            <th>Duration</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var Filmes in Films.ListofFilms())
        {
            <tr>
                <td>@Filmes.Title</td>
                @*<td>@Filmes.Discritption</td>
                <td>@Filmes.Discritption</td>*@
                <td>@Html.ActionLink("Details", "Details", new { id = Filmes.ID })</td>
            </tr>
        }
    </tbody>
</table>

